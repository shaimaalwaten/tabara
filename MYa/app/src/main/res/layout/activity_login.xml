<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9C0C0"
    android:orientation="vertical"
    tools:context=".login">

    <TextView
        android:id="@+id/textView0"
        android:textColor="#ba7967"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="100dp"
        android:fontFamily="@font/janna"
        android:text="تسجيل دخول"
        android:textSize="35dp" />
    <EditText
        android:id="@+id/inputemail"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/whitle"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:fontFamily="@font/janna"
        android:hint="الايميل    "
        android:paddingStart="20dp"
        android:paddingRight="140dp"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/inputpassword"
        android:layout_width="379dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/whitle"
        android:drawableRight="@drawable/ic_baseline"
        android:fontFamily="@font/janna"
        android:hint="الرمز السري"
        android:paddingStart="20dp"
        android:paddingRight="100dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/janna"
        android:text=" الدخول"
        android:textColor="#FDFDFC"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="145dp"
        android:fontFamily="@font/janna"
        android:text="نسيت كلمة المرور؟" />


</LinearLayout>
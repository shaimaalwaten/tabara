<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9C0C0"
    android:orientation="vertical"
    tools:context=".tbaraanew">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/janna"
        android:text="للتبرع"
        android:textColor="#ba7967"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/nameone"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/whitle"
        android:ems="10"
        android:fontFamily="@font/janna"
        android:hint="الأسم الاول"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingRight="20dp"
        android:textColor="#070707"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/nametwo"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp
"
        android:background="@drawable/whitle"
        android:ems="10"
        android:fontFamily="@font/janna"
        android:hint="الأسم الثاني"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingRight="20dp"
        android:textColor="#020202"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="356dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp
"
        android:background="@drawable/whitle"
        android:ems="10"
        android:fontFamily="@font/janna"
        android:hint="المنطقة"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingRight="20dp"
        android:textColor="#070707"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="359dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp
"
        android:background="@drawable/whitle"
        android:ems="10"
        android:fontFamily="@font/janna"
        android:hint="رقم الهاتف"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingRight="20dp"
        android:textColor="#040303"
        android:textSize="20dp" />

    <Button
        android:id="@+id/yes"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/janna"
        android:text="تبرع"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/forget2"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/janna"
        android:text="الرجاء التأكد من ادخال جميع المعلومات" />

</LinearLayout>
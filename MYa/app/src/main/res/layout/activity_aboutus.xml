<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9C0C0"
    android:orientation="vertical"
    tools:context=".Aboutus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="101dp"
            android:layout_height="73dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/lofoo" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/janna"
            android:padding="10dp"
            android:text='مؤسسة خيرية لا ربحية , "تبرع واجعل العالم صحي"'
            android:textColor="#FFF"
            android:textSize="25dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/janna"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:text=" يواجه عالمنا الكثير من الحالات الخطرة التي تحتاج التبرع بالدم فيهدف هذا التطبيق إلى تسهيل هذه العملية على المتبرعيين وايضا جمع أكبر قدر ممكن من المتبرعين بالدم لمساعدة المرضى والمحتاجين"
                android:textColor="#FFF"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/rr" />

</LinearLayout>